{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python", // Linux/macOS
    // "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Windows için bu satırı kullanın
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.addImportOnPaste": true
}